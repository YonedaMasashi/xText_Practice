package org.xtext.example.qdsl.validation

import org.xtext.example.qdsl.qDsl.Question
import org.xtext.example.qdsl.qDsl.QDslPackage

//import org.eclipse.xtext.validation.Check

/**
 * This class contains custom validation rules. 
 *
 * See https://www.eclipse.org/Xtext/documentation/303_runtime_concepts.html#validation
 */
class QDslValidator extends AbstractQDslValidator {

  public static val INVALID_NAME = 'invalidName'

	@Check
	def checkGreetingStartsWithCapital(Question question) {
		if (question.answerTypes.atype.contains("check_box")) {
			if (!(question.eContents.contains(question.chooseFroms))) {
				error("AnswerType Check requires ChooseFrom Option", QDslPackage.Literals.QUESTION__ANSWER_TYPES);
			}
		}
		
	}
}
